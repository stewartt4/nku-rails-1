<div class="header">
  <h1><%= link_to 'Bueller', root_path, id: 'logo'%></h1>
  <h2 class='new-user-btn'><%= link_to 'Sign Up!', new_user_path, class: 'btn btn-large btn-primary' %></h2>
  <h3 class='new-user-btn'><%= link_to 'Sign In!', new_session_path, class: 'btn btn-large btn-primary' %></h3>
</div>
<% flash.each do |name, msg| -%>
  <%= content_tag :div, msg, class: 'alert alert-success' %>
<% end %>
<h2 class='im-here-btn'><%= link_to "I'm Here!", '#', class: 'btn btn-large btn-primary' %></h2>
<% if current_user != nil %>
  <p class='center'><%= current_user.name %> is currently signed in.</p>
<% end %>